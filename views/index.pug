doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="description", content="Index Page, containing links to individual articles.")
		link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
		link(rel="manifest" href="manifest.json" crossorigin="use-credentials")
		title Index
	body

		div(class='grid-container')
			div(class='header')
				h1 Writing Far Too Much About Games

			div(class='left')

			div(class='content')
				ul
					each article, key in articles
							- let day = article.date.getDate()
							- let month = article.date.getMonth() + 1
							- let year = article.date.getFullYear()
							- let datePosted = day + "/" + month + "/" + year
							li(id= key) 
								a(class='index-link' href="/articles/" + article.id) #{article.title}
								span(class="date-posted") #{datePosted}
								p(class="short-desc") #{article.description}
							

			div(class='right')

			div(class='footer')
				h4: a(class="footer-link" href="/") I Just Have Thoughts About Games 2021

